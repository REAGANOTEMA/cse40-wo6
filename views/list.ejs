<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title || "Data List" %></title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f4f4;
      margin: 0;
      padding: 0;
    }
    header {
      background: #333;
      color: white;
      padding: 1em;
      text-align: center;
    }
    nav a {
      color: white;
      margin: 0 1em;
      text-decoration: none;
      font-weight: bold;
    }
    main {
      max-width: 900px;
      margin: 2em auto;
      background: white;
      padding: 2em;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    h1 {
      text-align: center;
      margin-bottom: 1em;
    }
    .item-box {
      padding: 1em;
      margin-bottom: 1em;
      border: 1px solid #ddd;
      border-radius: 8px;
      background: #fafafa;
    }
    .item-box p {
      margin: 0.3em 0;
    }
    footer {
      text-align: center;
      padding: 2em 0;
      background: #333;
      color: #fff;
      margin-top: 3em;
    }
  </style>
</head>
<body>
  <header>
    <nav>
      <a href="/">Home</a>
      <a href="/products">Products</a>
      <a href="/wishlist">Wishlist</a>
      <a href="/reviews">Reviews</a>
      <a href="/orders">Orders</a>
    </nav>
  </header>

  <main>
    <h1><%= title || "Data List" %></h1>

    <% 
      // Determine which key holds the data (items, products, reviews, orders)
      const dataKeys = ["items", "products", "reviews", "orders"];
      let dataArray = null;
      for (const key of dataKeys) {
        if (locals[key]) { dataArray = locals[key]; break; }
      }
    %>

    <% if (dataArray && dataArray.length > 0) { %>
      <% dataArray.forEach(item => { %>
        <div class="item-box">
          <% for (let key in item.toObject()) { %>
            <p><strong><%= key %>:</strong> <%= item[key] %></p>
          <% } %>
        </div>
      <% }) %>
    <% } else { %>
      <p style="text-align:center; font-size:1.1em;">
        No items available to display.
      </p>
    <% } %>

  </main>

  <footer>
    <p>&copy; <%= new Date().getFullYear() %> Reagan Otema</p>
  </footer>
</body>
</html>
